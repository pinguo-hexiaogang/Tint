<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    tools:context=".activity.RippleActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/eft_lightcolor_beauty" />

    <View
        android:id="@+id/ripple_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_view"
        android:layout_alignLeft="@id/image_view"
        android:layout_alignRight="@id/image_view"
        android:layout_alignTop="@id/image_view"
        android:background="@drawable/settings_item_click_selector"
        android:clickable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:text="NEW"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp" />

    <FrameLayout
        android:id="@+id/trans_layout"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@android:color/black">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_dark" />
    </FrameLayout>

</RelativeLayout>
